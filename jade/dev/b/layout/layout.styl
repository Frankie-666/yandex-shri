headerHeight = 80px
layoutBg = "data:image/jpeg;base64,"

body
	box-reset()

.layout
	font normal fontSizeBase / 1.3 fontFamily, Arial, serif;
	min-width minWidth - layoutGap*2
	padding-top headerHeight
	background url(layoutBg)

	&__wrapper
		min-width minWidth - layoutGap*2
		max-width maxWidth - layoutGap*2
		padding 0 layoutGap
		margin 0 auto
		
		// новый контекст форматирования
		&:before,
		&:after
			display table
			width 100%
			height 0
			visibility hidden
			content ""

	&__header
		position fixed
		left 0
		top 0
		width 100%
		height headerHeight
		z-index 0

	&__content
		position relative
		z-index 1
		background url(layoutBg)
		border-top 1px solid #c5c5c5
		border-bottom @border-top

		&:before
			gradient(white, rgba(255,255,255,0))
			height 30px
			width 100%
			position absolute
			left 0
			top -1 * @height - 1
			content ""

	&__caption
		box-reset()
		font-size fontSizeCaption
		font-weight bold
		margin 20px 0

	&__copyrights
		box-reset()
		margin 24px 0