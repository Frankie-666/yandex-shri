.button
	box-reset()
	display inline-block
	vertical-align top
	padding 5px 10px
	background black
	border-radius 3px
	cursor pointer

	color white
	text-shadow 0 -1px 1px black
	font-size 12px
	line-height 18px

	&_ok
		background green

	&_cancel
		background gray

	.form__fieldset_buttons &
		margin-left 6px	